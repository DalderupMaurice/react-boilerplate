{
  "name": "typescript-project-setup",
  "version": "1.0.0",
  "author": "",
  "description": "",
  "keywords": [],
  "license": "MIT",
  "main": "dist/index.js",
  "packageManager": "yarn@3.0.2",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --poll ./src/index.ts",
    "build": "tsc -b"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-angular": "13.1.0",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "prettier": "2.4.0",
    "ts-node": "10.2.1",
    "ts-node-dev": "1.1.8",
    "typescript": "4.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn dlx @yarnpkg/doctor",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "pascal-case"
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "refactor",
          "revert"
        ]
      ]
    }
  }
}
